{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Win32 GUI",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/nologo",
        "/W4",
        "winmain.c",        // or "src\\winmain.c" if it's in a subfolder
        "/Fe:winmain.exe",
        "/link",
        "user32.lib",
        "gdi32.lib",
        "/SUBSYSTEM:WINDOWS"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
